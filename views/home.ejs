<html>
<head>
    <title>Stock Exchange</title>

    <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.4.3/angular.js"></script>
    <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.4.3/angular-animate.js"></script>
    <script src="//angular-ui.github.io/bootstrap/ui-bootstrap-tpls-0.13.3.js"></script>
    <link href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css" rel="stylesheet">

    <script src="assets/js/main/app.js"></script>
    <script src="assets/js/main/services/svStocks.js"></script>
    <script src="assets/js/main/services/svLosers.js"></script>
    <link rel="stylesheet" href="assets/css/style.css" type="text/css">
</head>
<body ng-app="app.demotakedata">
<h2 class="spielbox text-center" >Hanoi Stock Exchange</h2>
<tabset>
    <tab heading="Gainers">
        <div ng-controller="gainerController">
            <table class="container">
                <thead>
                <tr>
                    <th scope="col">Code</th>
                    <th scope="col">Name</th>
                    <th scope="col">Price</th>
                    <th scope="col">Value</th>
                    <th scope="col">Change</th>
                    <th scope="col">%Change</th>
                </tr>
                </thead>
                <tbody>
                <tr ng-repeat="user in stocks">
                    <td>{{ user.stock }}.HX</td>
                    <td>{{ user.name }}</td>
                    <td>{{ user.price | number : 2 }}</td>
                    <td>{{ user.value | number : 0 }}</td>
                    <td ng-class="userClass(user)">{{ user.changevalue }}</td>
                    <td ng-class="userRate(user)">{{ user.changerate }}</td>
                </tr>
                </tbody>
            </table>
        </div>
    </tab>
    <tab heading="Losers">
        <div ng-controller="losersController">
            <table class="container">
                <thead>
                <tr>
                    <th scope="col">Code</th>
                    <th scope="col">Name</th>
                    <th scope="col">Price</th>
                    <th scope="col">Value</th>
                    <th scope="col">Change</th>
                    <th scope="col">%Change</th>
                </tr>
                </thead>
                <tbody>
                <tr ng-repeat="user in stocks">
                    <td>{{ user.stock }}.HX</td>
                    <td>{{ user.name }}</td>
                    <td>{{ user.price | number : 2 }}</td>
                    <td>{{ user.value | number : 0 }}</td>
                    <td ng-class="userClass(user)">{{ user.changevalue }}</td>
                    <td ng-class="userRate(user)">{{ user.changerate }}</td>
                </tr>
                </tbody>
            </table>
        </div>
    </tab>
</tabset>

</body>
</html>
